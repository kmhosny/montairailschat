    <%= form.password_field :password %>
  </div>

  <div class="text-center mt-3">
    <%= form.submit :signup, class: "inline-flex items-center px-4 py-2 font-semibold leading-6 text-sm shadow rounded-md text-white bg-gray-800 hover:bg-gray-600 transition ease-in-out duration-150" %>
