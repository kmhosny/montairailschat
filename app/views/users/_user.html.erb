<div id="<%= dom_id user %>">
  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>
  <div data-controller="chat">
    <%= text_field_tag :message %>
    <button id="send_message" data-action="chat#sendMessage">
      Send
    </button>
    <div data-target="chat.messages">
      <%= render user.chat_histories %>
    </div>
  </div>
</div>
